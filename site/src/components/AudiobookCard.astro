---
interface Props {
  title: string;
  author: string;
  duration: string;
  description: string;
  slug: string;
}

const { title, author, duration, description, slug } = Astro.props;
---

<article class="audiobook-card">
  <a href={`/audiobook/${slug}`}>
    <div class="card-content">
      <h2>{title}</h2>
      <p class="author">by {author}</p>
      <p class="description">{description}</p>
      <div class="meta">
        <span class="duration">{duration}</span>
      </div>
    </div>
  </a>
</article>

<style>
  .audiobook-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .audiobook-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .audiobook-card a {
    display: block;
    color: inherit;
    text-decoration: none;
  }

  .card-content {
    padding: 1.5rem;
  }

  h2 {
    font-family: var(--font-serif);
    font-size: 1.25rem;
    margin-bottom: 0.25rem;
  }

  .author {
    color: var(--color-text-muted);
    font-size: 0.9rem;
    margin-bottom: 0.75rem;
  }

  .description {
    font-size: 0.9rem;
    color: var(--color-text);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    margin-bottom: 1rem;
  }

  .meta {
    display: flex;
    gap: 1rem;
    font-size: 0.8rem;
    color: var(--color-text-muted);
  }

  .duration::before {
    content: "~";
    margin-right: 0.25rem;
  }
</style>
