---
interface Props {
  title: string;
  author: string;
  duration: string;
  description: string;
  slug: string;
  audioFile: string;
}

const { title, author, duration, description, slug, audioFile } = Astro.props;
---

<article class="audiobook-card">
  <div class="card-content">
    <a href={`/audiobook/${slug}`} class="card-link">
      <h2>{title}</h2>
      <p class="author">by {author}</p>
      <p class="description">{description}</p>
    </a>
    <div class="player-row">
      <audio controls preload="none">
        <source src={`/audio/${audioFile}`} type="audio/mpeg" />
      </audio>
      <span class="duration">{duration}</span>
    </div>
  </div>
</article>

<style>
  .audiobook-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .audiobook-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .card-link {
    display: block;
    color: inherit;
    text-decoration: none;
  }

  .card-content {
    padding: 1.5rem;
  }

  h2 {
    font-family: var(--font-serif);
    font-size: 1.25rem;
    margin-bottom: 0.25rem;
  }

  .author {
    color: var(--color-text-muted);
    font-size: 0.9rem;
    margin-bottom: 0.75rem;
  }

  .description {
    font-size: 0.9rem;
    color: var(--color-text);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    margin-bottom: 1rem;
  }

  .player-row {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid var(--color-border);
  }

  audio {
    flex: 1;
    height: 36px;
    min-width: 0;
  }

  .duration {
    font-size: 0.8rem;
    color: var(--color-text-muted);
    white-space: nowrap;
  }

  .duration::before {
    content: "~";
    margin-right: 0.25rem;
  }
</style>
