---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Short-form audiobooks from the public domain" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="alternate" type="application/rss+xml" title="Claudiobooks Podcast Feed" href="/feed.xml" />
    <title>{title} | Claudiobooks</title>
    <style is:global>
      :root {
        --color-bg: #faf9f7;
        --color-text: #2d2d2d;
        --color-text-muted: #666;
        --color-accent: #8b5cf6;
        --color-accent-light: #a78bfa;
        --color-border: #e5e5e5;
        --font-serif: 'Georgia', 'Times New Roman', serif;
        --font-sans: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: var(--font-sans);
        background: var(--color-bg);
        color: var(--color-text);
        line-height: 1.6;
        min-height: 100vh;
      }

      a {
        color: var(--color-accent);
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <header class="site-header">
      <nav>
        <a href="/" class="logo">Claudiobooks</a>
        <div class="nav-links">
          <a href="/">Library</a>
          <a href="/about">About</a>
          <a href="/feed.xml" class="subscribe-link">Subscribe</a>
        </div>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer class="site-footer">
      <p>Public domain books, narrated by AI. Built with Claude.</p>
    </footer>
    <style>
      .site-header {
        border-bottom: 1px solid var(--color-border);
        padding: 1rem 2rem;
      }

      .site-header nav {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .logo {
        font-family: var(--font-serif);
        font-size: 1.5rem;
        font-weight: bold;
        color: var(--color-text);
      }

      .nav-links {
        display: flex;
        gap: 2rem;
      }

      .nav-links a {
        color: var(--color-text-muted);
      }

      .nav-links .subscribe-link {
        color: var(--color-accent);
        font-weight: 500;
      }

      main {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
        min-height: calc(100vh - 200px);
      }

      .site-footer {
        border-top: 1px solid var(--color-border);
        padding: 2rem;
        text-align: center;
        color: var(--color-text-muted);
        font-size: 0.9rem;
      }
    </style>
  </body>
</html>
